<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="2dp"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.031" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/routeImageID"
                android:background="@android:color/background_dark"
                android:layout_width="153.5dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/routeNameID"
                android:paddingLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/routeImageID"
                android:text="Nazwa trasy"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/routeRegionID"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@+id/routeImageID"
                android:text="Województwo"
                android:layout_below="@+id/routeNameID"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/diff"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@+id/routeImageID"
                android:text="Kolor szlaku:"
                android:layout_below="@+id/routeRegionID"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/routeDifficultyID"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@+id/diff"
                android:layout_below="@+id/routeRegionID"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/length"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@+id/routeImageID"
                android:text="Długość szlaku:"
                android:layout_below="@+id/routeDifficultyID"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/routeLengthID"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@+id/length"
                android:layout_below="@+id/routeDifficultyID"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/routeLengthID"
                android:text=" km"
                android:layout_below="@+id/routeDifficultyID"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>



